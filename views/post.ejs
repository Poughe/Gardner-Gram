    <div class="container mt-4">
      <div class="row">
        <div>
          <h2>Comment</h2>
          <% if (user.local.email) { %>
            <form action="/makeComment/<%= posts._id %>" method="POST">
              <input type="text" name="comments" placeholder="comment">
              <button type="submit">Submit</button>
            </form>
          <% } %>
        </div> 
      </div>
       
      <div class="col-sm-6 mt-3">
        <h3>Posts</h3>
          <ul class="messages">
            <li class="message">
              <h4><%= posts.caption %></h4>
              <img src="../<%= posts.img %>" alt="">
              <span><%= posts.likes %></span>
              
              <% if(posts.likes > 0){ %>
                <span><i class="fas fa-heart liked" aria-hidden="true"></i></span>
                <%} else {%>
                  <span><i class="far fa-heart liked" aria-hidden="true"></i></span>
                  <%}%>

            </li>
            <ul>
            <% for(var i=0; i<comments.length; i++) {%>
              <li class="message">
                <span><%= comments[i].comments %></span>
              </li>
            <% } %>
            </ul>

</div>
