  <body>
    <!--NavBar-->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 fixed-top">
      <div class="container">
        <a href="#" class="navbar-brand">Gardner-Feed</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navmenu">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a href="/profile" class="btn btn-default btn-sm my-2 mx-2">Profile</a>
            </li>
            <li class="nav-item">
              <a href="/logout" class="btn btn-default btn-sm my-2 mx-2">Logout</a>
            </li>
          </ul>
        </div>
      </div>	
    </nav>
    <!--End of Navbar-->
<div class="d-flex justify-content-center">
    <div class="text-center">

      <ul class="messages">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="message card bg-dark mb-4">
            <span class="hide"><%= posts[i]._id %></span>
            <a href="/post/<%= posts[i]._id %>">
              <img src="<%= posts[i].img %>" alt="">
              <h4><%= posts[i].caption %></h4>
              <a href="/page/<%= posts[i].postedBy %>">User: <%= posts[i].postedByUserName %></a>
            </a>
            <div class="card-body">
              <a class="px-2" href="/post/<%= posts[i]._id %>"><i class="far fa-comment"></i></a>
              <span><%= posts[i].likes %></span>
              <% if(posts[i].likes > 0){ %>
                <span><i class="fas fa-heart liked" aria-hidden="true"></i></span>
                <%} else {%>
                <span><i class="far fa-heart liked" aria-hidden="true"></i></span>
              <%}%>
            </div>
          </li>
        <% } %>
      </ul>
    </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
