  <body>
    <!--NavBar-->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 fixed-top">
      <div class="container">
        <a href="#" class="navbar-brand">Profile Page</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navmenu">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a href="/feed" class="btn btn-default btn-sm my-2 mx-2">Feed</a>
            </li>
            <li class="nav-item">
              <a href="/logout" class="btn btn-default btn-sm my-2 mx-2">Logout</a>
            </li>
          </ul>
        </div>
      </div>	
    </nav>
    <!--End of Navbar-->

    <div class="container mb-5">
      <div class="row">
        <div class="col-sm-6">
          <h2>Make A Post</h2>
          <% if (user.local.email) { %>
            <form action="/makePost" enctype="multipart/form-data" method="POST">
              <input type="text" name="caption" placeholder="caption" class="caption">
              <button type="submit" class="btn btn-default btn-sm">Submit</button>
              <input type="file" name="file-to-upload">
            </form>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="container">
      <h3> My Posts</h3>
      <div class="text-center p-2"> 
        <ul class="d-flex messages">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="message border boder-light mx-2">
              <img src="<%= posts[i].img %>" alt="">
              <input type="hidden" value="<%= posts[i]._id %>">   
              <a href="/post/<%= posts[i]._id %>">
                <h4><%= posts[i].caption %></h4>
              </a>
              <span><%= posts[i].likes %></span>
              <% if(posts[i].likes > 0){ %>
                <span><i class="fas fa-heart liked" aria-hidden="true"></i></span>
                <%} else {%>
                  <span><i class="far fa-heart liked" aria-hidden="true"></i></span>
                  <%}%>
            </li>
          <% } %>
        </ul>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/c0e668a8ad.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="js/main.js"></script>
  </body>
</html>
